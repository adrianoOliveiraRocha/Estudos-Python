<MyButton@Button>:
	size_hint: (None, None)
	width: '100dp'
	height: '40dp'
	

<MyAnchorLayout>:
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'top'
		BoxLayout:
			size_hint: None, None
			width: root.width
			height: "50dp"
			orientation: 'horizontal'
			id: _buttons
			Button:
				text: 'Button1'
			Button:
				text: 'Button2'
			Button:
				text: 'Button3'
			Button:
				text: 'Button4'

	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		BoxLayout:
			spacing: 10
			size_hint: None, None
			width: '500dp' 
			height: '200dp'
			orientation: 'vertical'
			Label:
				text: 'E-Mail'
			TextInput:
			Label:
				text: 'Password'
			TextInput:
				password: True	
			GridLayout:
				cols: 2			
				MyButton:
					text: 'Login'	
					
				MyButton:
					text: 'Clean'
					
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'bottom'
		BoxLayout:
			spacing: 10
			size_hint: None, None
			width: root.width
			height: root.height / 4 
			orientation: 'horizontal'
			id: _labels
			MyButton:
				text: 'Ok'
			MyButton:
				text: 'Exit'
			